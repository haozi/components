{
  "name": "components",
  "version": "1.0.0",
  "group": "{{group}}",
  "description": "{{description}}",
  "contributors": [
    "{{author}}"
  ],
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run clear && npm run fix && cross-env NODE_ENV=development webpack-dev-server --progress --config .config/webpack.dev.config.js --hot --inline --host 0.0.0.0 --port 8080",
    "build": "npm run clear && cross-env NODE_ENV=production npm run lint && node .config/rollup.config.js",
    "lint": "eslint --ext .js,.vue src .config .script test/*_spec.js",
    "test": "npm run build && nyc ava ./test/*_spec.js",
    "clear": "rimraf dist .nyc_output coverage; mkdirp dist",
    "prepublish": "npm run test",
    "fix": "standard src/**/*.js --fix && standard dist/index.js --fix  >/dev/null 2>&1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "cross-env NODE_ENV=production node .script/checkVersion.js && npm run lint && npm run test && npm run clear && npm run fix",
      "pre-push": "git status"
    }
  },
  "ava": {
    "require": [
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "ava": "^0.17.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "browser-env": "^2.0.16",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "eslint": "^3.11.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "ghooks": "^1.3.2",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mkdirp": "^0.5.1",
    "nyc": "^10.0.0",
    "postcss-loader": "^1.2.0",
    "postcss-px2rem": "^0.3.0",
    "rimraf": "^2.5.4",
    "rollup-loader": "^0.0.2",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-less": "^0.1.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-vue": "^2.2.10",
    "safe-trim": "^1.0.11",
    "standard": "^8.6.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2",
    "webpack-merge": "^1.0.2",
    "webpack-notifier": "^1.4.1"
  }
}
